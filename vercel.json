{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": "public/**"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "public/static/$1"
    },
    {
      "src": "/send_message",
      "dest": "api/app.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "api/app.py"
    }
  ]
}
